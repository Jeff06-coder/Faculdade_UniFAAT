programa
{
	
	funcao inicio()
	{
		inteiro num, soma=0
		faca{
			escreva ("Digite um num para somar: ")
			leia (num)
			soma = soma + num
		} enquanto (soma <= 100)
		escreva ("soma final =" +soma)
	}
}
