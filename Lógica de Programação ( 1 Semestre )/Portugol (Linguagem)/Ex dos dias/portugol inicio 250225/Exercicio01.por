/* Algoritimo que recebe um número e motra o
 *  seu sucessor e antecessor ;)
 * 
 */
programa
{
	
	funcao inicio()
	{
		inteiro A, B, C
		escreva ("Informe um número: ")
		leia (A)
		B = A + 99
		C = A - 99
		escreva ("O antecessor de "+A+" é "+C+"\n")
		escreva ("O sucessor de "+A+ " é "+B)
		
		
	}
}
