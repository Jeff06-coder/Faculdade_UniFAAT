programa
{
	
	funcao inicio()
	{
	inteiro a, b, c
	escreva ("Digite 3 numeros: ")
	leia (a, b, c)
	se (a >= b e b>=c) {
		escreva ("Ordem decrescente: " ,a, "," ,b, "," ,c)
	} 
	se (a >= c e c >= b) {
		escreva ("Ordem decrescente: " ,a, "," ,c, "," ,b)
	}
	}
}
