programa
{
	
	funcao inicio()
	{
		inteiro num, soma=0, contador=1
		enquanto (contador <= 2) {
			escreva ("Digite um numero: ")
			leia (num)
			soma = soma + num
			contador = contador + 1
		}
		escreva ("Soma dos numeros: " ,soma)
	}
}
